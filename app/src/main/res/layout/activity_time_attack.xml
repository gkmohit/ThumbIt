<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/playerOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:background="@color/player_one_colour">

        <TextView
            android:id="@+id/playerOneScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="72dp"
            android:gravity="center"
            android:rotation="180"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/player_two_colour"
            android:textSize="@dimen/end_game_text_size" />

        <TextView
            android:id="@+id/playerOneFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/playerOneScore"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:rotation="180"
            android:text="Small Text"
            android:textColor="@color/player_two_colour"
            android:textSize="@dimen/app_tagline_text"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/countdownBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:background="@color/progress_bar_color_start">

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Text"
            android:textColor="@color/score_board"
            android:textSize="@dimen/timer_text_size" />

        <TextView
            android:id="@+id/playAgainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/play_again"
            android:textColor="@color/score_board"
            android:textSize="@dimen/play_again_text_size"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/returnHomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/playAgainText"
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/return_home"
            android:textColor="@color/score_board"
            android:textSize="@dimen/play_again_text_size"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playerTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:background="@color/player_two_colour">

        <TextView
            android:id="@+id/playerTwoScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:gravity="center"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/player_one_colour"
            android:textSize="@dimen/end_game_text_size" />

        <TextView
            android:id="@+id/playerTwoFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerTwoScore"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Small Text"
            android:textColor="@color/player_one_colour"
            android:textSize="@dimen/app_tagline_text"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>