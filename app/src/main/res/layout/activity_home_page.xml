<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:background="@color/player_one_colour">

        <TextView
            android:id="@+id/thumbText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/player_two_colour"
            android:textSize="@dimen/app_name_text_size" />

        <TextView
            android:id="@+id/tagLineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbText"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/app_tag_line_text"
            android:textColor="@color/player_two_colour"
            android:textSize="@dimen/app_tagline_text" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/player_two_colour">


        <TextView
            android:id="@+id/firstTo100Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/play_first_to_winning_score"
            android:textAllCaps="true"
            android:textColor="@color/player_one_colour"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/home_page_text_size" />

        <TextView
            android:id="@+id/againstTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/firstTo100Text"
            android:layout_marginTop="15dp"
            android:text="@string/play_against_time"
            android:textAllCaps="true"
            android:textColor="@color/player_one_colour"
            android:textSize="@dimen/home_page_text_size" />

        <TextView
            android:id="@+id/helpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/againstTimeText"
            android:layout_marginTop="15dp"
            android:text="@string/help"
            android:textAllCaps="true"
            android:textColor="@color/player_one_colour"
            android:textSize="@dimen/home_page_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/created_with"
            android:id="@+id/createdWithText"
            android:textColor="@color/player_one_colour"

            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/signatureText"
            android:layout_toStartOf="@+id/signatureText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/signatureText"
            android:textColor="@color/player_one_colour"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="heart" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/in_toronto"
            android:id="@+id/inTorontoText"
            android:textColor="@color/player_one_colour"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/signatureText"
            android:layout_toEndOf="@+id/signatureText" />

    </RelativeLayout>
</LinearLayout>