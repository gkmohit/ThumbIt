<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/player_two_colour"
    tools:context="com.iwadevelopers.www.thumbit.View.HelpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_text"
        android:id="@+id/helpTextView"
        android:gravity="center"
        android:textSize="@dimen/help_text_size"
        android:textColor="@color/player_one_colour"
        android:scrollbars = "vertical"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/homeButton"
        android:maxLines = "13"
        android:layout_alignStart="@+id/homeButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_home"
        android:id="@+id/homeButton"
        android:background="@color/progress_bar_color_midway"
        android:textColor="@color/score_board"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
